<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Titre principal -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activité des Capteurs et WiFi"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <!-- Zone de connexion au partage de connexion -->
    <LinearLayout
        android:id="@+id/connection_buttons"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_enregistrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commencer à ENREGISTRER"
            android:layout_marginBottom="8dp" /> <!-- Ajout de marge -->

        <Button
            android:id="@+id/btn_stop_enregistrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOPPER L'ENREGISTREMENT" />

    </LinearLayout>

    <!-- Statut WiFi -->
    <TextView
        android:id="@+id/wifi_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion WiFi : Déconnecté"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/connection_buttons"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Statut des capteurs -->
    <TextView
        android:id="@+id/sensor_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="État des capteurs"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/wifi_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Section pour les capteurs -->
    <ScrollView
        android:id="@+id/sensor_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/sensor_status_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/csv_buttons"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Capteur 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/sensor1_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capteur 1\nStatut : Déconnecté\nCalibration : Non calibré\nPort : "
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- Capteur 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/sensor2_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capteur 2\nStatut : Déconnecté\nCalibration : Non calibré\nPort : "
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- Capteur 3 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/sensor3_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capteur 3\nStatut : Déconnecté\nCalibration : Non calibré\nPort : "
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- Capteur 4 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EFEFEF"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/sensor4_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capteur 4\nStatut : Déconnecté\nCalibration : Non calibré\nPort : "
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Boutons pour gérer le CSV -->
    <LinearLayout
        android:id="@+id/csv_buttons"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_select_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOIR VOS FICHIERS .TXT"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
